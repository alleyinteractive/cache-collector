{
    "name": "alleyinteractive/cache-collector",
    "description": "Dynamic cache key collector for easy purging.",
    "type": "wordpress-plugin",
    "keywords": [
        "alleyinteractive",
        "cache-collector"
    ],
    "homepage": "https://github.com/alleyinteractive/cache-collector",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Sean Fisher",
            "email": "srtfisher@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^0.3",
        "alleyinteractive/composer-wordpress-autoloader": "^1.0",
        "mantle-framework/testkit": "^0.9",
        "nunomaduro/collision": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload-dev": {
                "Cache_Collector\\Tests\\": "tests"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
